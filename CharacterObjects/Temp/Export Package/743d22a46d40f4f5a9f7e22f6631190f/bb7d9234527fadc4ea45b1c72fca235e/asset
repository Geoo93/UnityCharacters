using UnityEngine;
using System.Collections;

public class EventController : MonoBehaviour {
	
	public Material Dust, Smoke;
	public Material FXLab_Dust, FXLab_Smoke, Unity_Dust, Unity_Smoke;
	public static bool FXLabShaderType = true;

	void Start () {
		Dust.shader = FXLab_Dust.shader;
		Smoke.shader = FXLab_Smoke.shader;
	}
	
	void Update () {
		if(!Weapon_Sniper.IsAktive())
			return;
		
		if(Weapon_Sniper.IsAktive()) {
			if(Input.GetKeyDown(KeyCode.Space)) {
				FXLabShaderType = !FXLabShaderType;
				SwitchMaterials();
			}
		}
	}
	
	void SwitchMaterials () {
		if(FXLabShaderType) {
			Dust.shader = FXLab_Dust.shader;
			Smoke.shader = FXLab_Smoke.shader;
		} else {
			Dust.shader = Unity_Dust.shader;
			Smoke.shader = Unity_Smoke.shader;
		}
	}
}
